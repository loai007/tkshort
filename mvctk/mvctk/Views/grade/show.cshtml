@model IEnumerable<mvctk.Models.grade>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.GradeA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeB)
            </th>
            <th>
                @Html.DisplayName("Final Grade")
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelutem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeA)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GradeB)
            </td>
            <td>

            @if (item.GradeB == null && item.GradeA != null)
            {
                @Html.DisplayFor(modelItem => item.GradeA)
            }

            else if (item.GradeB != null)
            {
                @Html.DisplayFor(modelItem => item.GradeB)
            }
            else
            {
                @Html.Display("0")
            }
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id1 = item.StudentID, id2 = item.CourseID })
            </td>
        </tr>
        }

    </table>
</body>
</html>
