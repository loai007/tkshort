@model mvctk.ViewModel.CourseViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCourse</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div>
        <form>
            <table>
                <tr>
                    <td> ID: </td>
                    <td>@Html.TextBoxFor(m => m.course.ID) </td>
                </tr>
                <tr>
                    <td> Name: </td>
                    <td>@Html.TextBoxFor(m => m.course.Name) </td>
                </tr>
                <tr>
                    <td> Points: </td>
                    <td>@Html.TextBoxFor(m => m.course.Points) </td>
                </tr>
                <tr>
                    <td> ExamA: </td>
                    <td>@Html.TextBoxFor(m => m.course.ExamA) </td>
                </tr>
                <tr>
                    <td> ExamB: </td>
                    <td>@Html.TextBoxFor(m => m.course.ExamB) </td>
                </tr>
                <tr>
                    <td> Lecturer ID: </td>
                    <td>@Html.TextBoxFor(m => m.course.LecturerID) </td>
                </tr>
                <tr>
                    <td> Time: </td>
                    <td>@Html.TextBoxFor(m => m.course.Time) </td>
                </tr>
                <tr>
                    <td> Class Room: </td>
                    <td>@Html.TextBoxFor(m => m.course.ClassRoom) </td>
                </tr>
            </table>
        </form>
        <input id="AddCourse" type="button" value="Add Course" onclick="SendData()"/>
        <br />
        <table id="courseTable">
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Points</td>
                <td>ExamA</td>
                <td>ExamB</td>
                <td>Lecturer ID</td>
                <td>Time</td>
                <td>ClassRoom</td>
            </tr>
        </table>
    
    
    </div>
</body>
</html>
